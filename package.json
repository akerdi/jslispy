{
  "name": "jslispy",
  "version": "0.0.1",
  "main": "main.ts",
  "author": "aker <tianxiaoxin001@gmail.com>",
  "license": "MIT",
  "scripts": {
    "dev": "nodemon --watch '**/*.ts' --ignore '**/*.test.*' --exec 'TS_NODE_FILES=true TS_NODE_TRANSPILE_ONLY=true ts-node --files -r tsconfig-paths/register' main.ts",
    "dev:lesson1": "nodemon --watch '**/*.ts' --ignore '**/*.test.*' --exec 'TS_NODE_FILES=true TS_NODE_TRANSPILE_ONLY=true ts-node --files -r tsconfig-paths/register' tech/lesson1.ts",
    "dev:lesson2.1": "nodemon --watch '**/*.ts' --ignore '**/*.test.*' --exec 'TS_NODE_FILES=true TS_NODE_TRANSPILE_ONLY=true ts-node --files -r tsconfig-paths/register' tech/lesson2.1.ts",
    "dev:lesson2.2": "nodemon --watch '**/*.ts' --ignore '**/*.test.*' --exec 'TS_NODE_FILES=true TS_NODE_TRANSPILE_ONLY=true ts-node --files -r tsconfig-paths/register' tech/lesson2.2.ts",
    "dev:lesson2.3": "nodemon --watch '**/*.ts' --ignore '**/*.test.*' --exec 'TS_NODE_FILES=true TS_NODE_TRANSPILE_ONLY=true ts-node --files -r tsconfig-paths/register' tech/lesson2.3.ts",
    "dev:win": "cross-env nodemon --watch '**/*.ts' --ignore '**/*.test.ts' --exec 'ts-node --files -r tsconfig-paths/register' main.ts",
    "start": "node main.js"
  },
  "devDependencies": {
    "@types/node": "^17.0.21",
    "cross-env": "^7.0.3",
    "nodemon": "2.0.12",
    "ts-node": "8.6.2",
    "tsconfig-paths": "3.10.1",
    "typescript": "4.3.5"
  }
}
